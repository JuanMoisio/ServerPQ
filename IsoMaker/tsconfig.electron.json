{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "outDir": "dist-electron",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmitOnError": false
  },
  "include": ["electron/**/*.ts", "services/**/*.ts", "shared/**/*.ts"],
  "exclude": ["src/**"]
}
